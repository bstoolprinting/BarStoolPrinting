<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/title_banner"
        app:srcCompat="@drawable/etsy_banner_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_layout">

                <Button
                    android:id="@+id/admin_about"
                    android:layout_width="@dimen/button_width_size"
                    android:layout_height="@dimen/button_height_size"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/colorTextOnPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_admin_about"
                    android:textColor="@color/colorTextOnBackground" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_layout">

                <Button
                    android:id="@+id/admin_join"
                    android:layout_width="@dimen/button_width_size"
                    android:layout_height="@dimen/button_height_size"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/colorTextOnPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_admin_join"
                    android:textColor="@color/colorTextOnBackground" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_layout">

                <Button
                    android:id="@+id/admin_vendors"
                    android:layout_width="@dimen/button_width_size"
                    android:layout_height="@dimen/button_height_size"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/colorTextOnPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_admin_retailers"
                    android:textColor="@color/colorTextOnBackground" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_layout">

        <Button
            android:id="@+id/home"
            android:layout_width="@dimen/small_button_width_size"
            android:layout_height="@dimen/small_button_height_size"
            android:background="@drawable/custom_button"
            android:padding="@dimen/padding_button"
            android:text="@string/title_home"
            android:textColor="@color/colorTextOnPrimary" />
    </LinearLayout>
</LinearLayout>